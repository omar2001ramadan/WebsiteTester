<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
  <div class="container mt-5">
    <h2>Create a New Interview</h2>
    <form id="createInterviewForm" action="/interviews/create" method="POST" class="mb-4">
      <div class="form-group">
        <label for="name">Interview Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="questions">Questions (comma-separated)</label>
        <input type="text" class="form-control" id="questions" name="questions" required>
      </div>
      <div class="form-group">
        <label for="idealAnswers">Ideal Answers (comma-separated)</label>
        <input type="text" class="form-control" id="idealAnswers" name="idealAnswers" required>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Create Interview</button>
    </form>
  </div>
<%- include('partials/_footer.ejs') %>
</body>
</html>